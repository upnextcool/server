{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "sourceMap": false,
    "outDir": "dist",
    "importHelpers": true,
    "declaration": false,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2020",
      "ESNext"
    ],
    "paths": {
      "@UpNext/*": ["src/api/*"],
      "@UpNext/loaders": ["src/loaders"],
      "@UpNext/middleware": ["src/middleware"],
      "@UpNext/logger": ["src/util/logger"],
      "@UpNext/environment": ["src/environment.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
